{
	"name": "dev-documento",
	"displayName": "Dev-Documento",
	"description": "AI-powered documentation and code review assistant",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.80.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "dev-documento.generateDocs",
				"title": "Dev-Doc: Generate Smart Documentation"
			},
			{
				"command": "dev-documento.runReview",
				"title": "Dev-Doc: Run Pre-Review"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection",
					"command": "dev-documento.generateDocs",
					"group": "1_modification"
				},
				{
					"when": "editorHasSelection",
					"command": "dev-documento.runReview",
					"group": "1_modification"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.1",
		"@types/node": "20.2.5",
		"@types/vscode": "^1.80.0",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"@vscode/test-electron": "^2.3.2",
		"eslint": "^8.41.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^5.1.3"
	},
	"dependencies": {
		"axios": "^1.11.0"
	}
}
